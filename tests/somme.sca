(* Programme scalpa qui calcule la somme de tous les entiers de "a" Ã  "b" *)

program somme
    var a, b, s : int;

    begin
        a := 0;
        b := 4;
        s := 0;

        while a <= b do
        begin
            s := s + a;
            a := a + 1;
        end;

        write s;
    end
